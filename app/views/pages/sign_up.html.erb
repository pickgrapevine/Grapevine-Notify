<% content_for :head do%>
  <%= stylesheet_link_tag "recurly/recurly.css" %>
  <%= javascript_include_tag "recurly/recurly.js" %>
  <script type="text/javascript">
    $(function(){
        Recurly.config({
          subdomain: 'grapevine'
          , currency: 'USD'
          , country: 'US'
          });
          
          Recurly.buildSubscriptionForm({
          target: '#recurly-subscribe'
          , planCode: 'simple'
          , successURL: 'confirmation.html'
          , distinguishContactFromBillingInfo: true
          , collectCompany: true
          , termsOfServiceURL: 'http://www.pickgrapevine.com/tos'
          });

          });
  </script>
<% end %>
<!--Body content-->
<div class="full-width-wrapper">
  <div class="fixed-width-wrapper" id="body-content">

    <h1>Sign Up Now<br />$20 a Month to Track Reviews Across the Web<br /></h1>
    <p>
    Reviews are checked daily about your company (or competitor), when we find one we'll send you a Text or Email directly to you. Never be in the dark again.
    </p>
    <div id ="recurly-subscribe">
    </div>

  </div>
</div>

<!--/Body content-->



